= form_for([@quantile_setting, @report], html: { class: '' }) do |f|
  - if @report.errors.any?
    #error_explanation
      %h2
        = pluralize(@report.errors.count, "error")
        prohibited this report from being saved:
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg
  .row-fluid
    .span4
      .control-group
        = f.label :low_temp_threshold, class: 'control-label'
        .controls
          = f.number_field :low_temp_threshold
    .span4
      .control-group
        = f.label :high_temp_threshold, class: 'control-label'
        .controls
          = f.number_field :high_temp_threshold
  .row-fluid
    .span4
      .control-group
        = f.label :location_id, class: 'control-label'
        .controls
          = f.select :location_id, options_from_collection_for_select(Location.all, :id, :name)
  .row-fluid
    .span4
      .control-group
        .controls
          %h4 Column 1
          %label.radio
            = f.radio_button :column1, :historical
            Historical
          %label.radio
            = f.radio_button :column1, :observed
            Observed
    .span4
      .control-group
        .controls
          %h4 Column 2
          %label.radio
            = f.radio_button :column2, :predicted
            Predicted
          %label.radio          
            = f.radio_button :column2, :adjusted
            Adjusted
  .actions
    = f.submit class: 'btn'
