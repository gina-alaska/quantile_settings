= form_for(@location) do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = pluralize(@location.errors.count, "error")
        prohibited this location from being saved:
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :lon
    %br/
    = f.text_field :lon
  .field
    = f.label :lat
    %br/
    = f.text_field :lat
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
